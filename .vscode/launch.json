    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "php",
            "request": "launch",
            "port": 0,
            "cwd": "${workspaceFolder}",
            "runtimeArgs": [
                "-dxdebug.mode=debug,develop",
                "-dxdebug.client_port=${port}",
                "-dxdebug.start_with_request=yes"
            ],
            "program": "${workspaceFolder}/vendor/bin/phpunit",
        }
    ]
